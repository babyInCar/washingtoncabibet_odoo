<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="zz_report_delivery_document_inherit" inherit_id="stock.report_delivery_document">

        <xpath expr="//div[@class='page']" position="before">
            <div style="float:right;">
                <span>Assembly:</span>
                <t t-if="o.assembly">
                    <span>Y</span>
                </t>
                <t t-else="">
                    <span>N</span>
                </t>
                <t t-foreach="range(6)" t-as="item">
                    <span style="width:30px;">&amp;nbsp;</span>
                </t>
                <span>Delivery:</span>
                <t t-if="o.delivery">
                    <span>Y</span>
                </t>
                <t t-else="">
                    <span>N</span>
                </t>
                <t t-foreach="range(6)" t-as="item">
                    <span style="width:30px;">&amp;nbsp;</span>
                </t>
                <span>Pick up:</span>
                <t t-if="o.pick_up">
                    <span>Y</span>
                </t>
                <t t-else="">
                    <span>N</span>
                </t>
                <t t-foreach="range(6)" t-as="item">
                    <span style="width:30px;">&amp;nbsp;</span>
                </t>
                <span>Install:</span>
                <t t-if="o.pick_up">
                    <span>Y</span>
                </t>
                <t t-else="">
                    <span>N</span>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[@name='signature']" position="after">
            <div style="float:right;">
                <div>
                    <span style="font-size:14px">
                        By singing this list,I confirm that I have received all goods in this order as listed
                        accurately <br/>and I confirm the satisfaction to the quality of products I received

                    </span>
                </div>

            </div>
        </xpath>


    </template>

</odoo>
